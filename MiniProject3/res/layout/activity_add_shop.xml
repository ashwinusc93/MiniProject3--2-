<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddShop" >

    <EditText
        android:id="@+id/cm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button1"
        android:layout_alignLeft="@+id/ct"
        android:ems="10"
        android:hint="ContactEmail"
        android:textSize="18sp"
        android:textStyle="italic"
        android:typeface="sans" />

    <EditText
        android:id="@+id/ct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cm"
        android:layout_alignLeft="@+id/cp"
        android:ems="10"
        android:hint="ContactTel"
        android:textSize="18sp"
        android:textStyle="italic"
        android:typeface="sans" />

    <Button
        android:id="@+id/button1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cm"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="60dp"
        android:text="Submit" />

    <EditText
        android:id="@+id/cp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ct"
        android:layout_alignLeft="@+id/pincode"
        android:layout_marginBottom="27dp"
        android:ems="10"
        android:hint="ContactPerson"
        android:textSize="18sp"
        android:textStyle="italic"
        android:typeface="sans" />

    <EditText
        android:id="@+id/pincode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/address"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Pincode"
        android:textSize="18sp"
        android:textStyle="italic"
        android:typeface="sans" />

    <EditText
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pincode"
        android:layout_alignLeft="@+id/ShopName"
        android:layout_marginBottom="21dp"
        android:ems="10"
        android:hint="ShopAddress"
        android:textSize="18sp"
        android:textStyle="italic"
        android:typeface="sans" />

    <EditText
        android:id="@+id/ShopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/address"
        android:layout_alignLeft="@+id/localityid"
        android:layout_marginBottom="23dp"
        android:ems="10"
        android:hint="ShopName"
        android:textSize="18sp"
        android:textStyle="italic"
        android:typeface="sans" />

    <EditText
        android:id="@+id/localityid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/sid"
        android:layout_marginLeft="24dp"
        android:ems="10"
        android:hint="LocalityID"
        android:textSize="18sp"
        android:textStyle="italic"
        android:typeface="sans" />

    <EditText
        android:id="@+id/sid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/localityid"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="ShopID"
        android:textSize="18sp"
        android:textStyle="italic"
        android:typeface="sans" >

        <requestFocus />
    </EditText>

</RelativeLayout>
